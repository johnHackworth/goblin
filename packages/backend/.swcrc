{
	"$schema": "https://json.schemastore.org/swcrc",
	"jsc": {
		"parser": {
			"syntax": "typescript",
			"dynamicImport": true,
			"decorators": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true
		},
		"experimental": {
			"keepImportAssertions": true
		},
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"target": "es2022"
	},
	"minify": false
}
