{
	"$schema": "https://json.schemastore.org/swcrc",
	"jsc": {
		"parser": {
			"syntax": "typescript",
			"dynamicImport": true,
			"decorators": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true
		},
		"experimental": {
			"keepImportAssertions": true,
			"emitAssertForImportAttributes": true
		},
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"target": "es2022"
	},
	"minify": false,
	"module": {
		"type": "es6",
		"strict": true,
		"resolveFully": true
	}
}
